# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               App.index

# Login & Registration
GET     /welcome                        Secure.login
POST    /login                          App.authenticate
POST    /registration                   App.register
GET     /logout                         Secure.logout

# Manage
GET     /manage                         NoteManager.index
POST    /manage/viewNote/{id}           NoteManager.viewNote
POST    /manage/newNotebook             NoteManager.newNotebook
POST    /manage/saveNewNotebook         NoteManager.saveNewNotebook
POST    /manage/newNote                 NoteManager.newNote
POST    /manage/saveNewNote             NoteManager.saveNewNote
POST    /manage/orderNotebooks          NoteManager.orderNotebooks
POST    /manage/orderNotes              NoteManager.orderNotes
POST    /manage/rename                  NoteManager.rename  
POST    /manage/remove                  NoteManager.remove
POST    /manage/saveNewTag              NoteManager.saveNewTag
POST    /manage/removeTagFromNote       NoteManager.removeTagFromNote
POST    /manage/addTagToNote            NoteManager.addTagToNote

POST    /search                         NoteManager.search
POST    /searchForTags                  NoteManager.searchForTags

# Edit
GET	/edit                           Edit.index
POST    /edit/{<[0-9]+>id}              Edit.editNote
POST    /edit/saveNote                  Edit.saveNote
POST    /edit/imageUpload               Edit.imageUpload

#Share
POST 	/sharenote                      Share.shareNote
POST    /sharenote/sharePublic          Share.sharePublic
POST    /sharenote/unsharePublic        Share.unsharePublic
POST    /sharenote/knownMail            Share.knownMail
POST    /sharenote/sharing              Share.sharing

#Public note
GET     /publicnote/{uuid}              PublicNote.index

#Note image
GET     /noteImage/{uuid}               App.getNoteImage

# jsRoutes
GET     /jsRoutes                       App.jsRoutes

# Admin 
*       /admin                          module:crud

# Map static resources
GET     /public/                        staticDir:public
